@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class ="table table-bordered">
  
        <tr>
            <th>ID</th>
            <th>Adı Soyadı</th>
            <th>Mail</th>
            <th>Kullanıcı Adı</th>     
            <th>Güncelle</th>
            <th>Sil</th>

        </tr>
   
  
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td><a href="/Admin/Instructor/EditInstructor/@item.Id" class="btn btn-warning">düzenle</a></td>
                <td><a href="/Admin/Instructor/DeleteInstructor/@item.Id" class="btn btn-danger">sil</a></td>
            </tr>
        }
   
</table>

<a href="/Login/Register/" class="btn btn-primary">eğitmen ekle</a>
<a href="/Admin/Instructor/InstructorAssignment" class="btn btn-primary">eğitmene aktivite ekle</a>

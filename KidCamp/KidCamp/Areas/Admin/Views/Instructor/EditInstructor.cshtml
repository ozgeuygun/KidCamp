@model EntityLayer.Concrete.AppUser
@{
    ViewData["Title"] = "EditInstructor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>EditInstructor</h1>



<form method="post">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        @Html.Label("Ad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Soyad")
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Mail")
        <input type="text" asp-for="Email" class="form-control" />
    </div>
 
    <div class="form-group">
        @Html.Label("Kullanıcı Adı")
        <input type="text" asp-for="UserName" class="form-control" />
    </div>

    <button class="btn btn-warning">Güncelle</button>
</form>

@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "InstructorAssignment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<h1>eğitmeni bir rezervasyona ata</h1>



<form method="post">
    <div class="form-group">
        @Html.Label("Etkinlik")
        @Html.DropDownListFor(x=>x.EventDetailID, (List<SelectListItem>)ViewBag.v,new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("kullanıcı seç")
        @Html.DropDownListFor(x => x.AppUserId, (List<SelectListItem>)ViewBag.UserList, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="Participant" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Eklenen Tarih")
        <input type="date" asp-for="ApplicationDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Notunuz")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button class="btn btn-outline-success">Gönder</button>
</form>

@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Rolu Sil</th>
        <th>Rolu Guncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-danger">Rolü Sil</a> </td>
            <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-warning">Rolü Güncelle</a> </td>
        </tr>

    }
</table>
<td><a href="/Admin/AdminRole/AddRole" class="btn btn-primary">Yeni Rol Girişi</a> </td>
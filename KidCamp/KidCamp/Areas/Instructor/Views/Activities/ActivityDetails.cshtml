@model EntityLayer.Concrete.EventDetail
@{
    ViewData["Title"] = "ActivityDetails";
    Layout = "~/Views/Shared/InstructorLayout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.EventName</h6>
    </div>
    <div class="card-body">
        <p>Başlangıç Tarihi: @Model.StartDate</p>
        <p>Bitiş Tarihi: @Model.EndDate</p>
        <p>Fiyat: @Model.Price</p>
        <p>Yaş Aralığı: @Model.MinAge - @Model.MaxAge</p>
    </div>
</div>


@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorHeaderPartial.cshtml")

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorSidebarPartial.cshtml")
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                @await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorTopbarPartial.cshtml")
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            @await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorFooterPartial.cshtml")

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    @await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorLogoutPartial.cshtml")

    @await Html.PartialAsync("~/Views/InstructorLayoutPartial/InstructorScriptPartial.cshtml")

</body>

</html>
